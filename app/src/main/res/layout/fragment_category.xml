<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#69728FF6"
    android:layout_height="match_parent"
    tools:context=".ui.category.CategoryFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="308dp"
        android:layout_height="94dp"
        android:layout_marginTop="52dp"
        android:text="What are you looking for? We can make it easy for you."
        android:textColor="#1B1919"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cat_search"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="6dp"
        android:hint="Search Here"
        android:padding="13dp"
        app:layout_constraintBottom_toTopOf="@+id/fruitss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/fruitss"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#999B1DD1"
        android:text="Fruits"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/softdrinks"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#99782387"
        android:text="Soft Drinks"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/vegetables"
        app:layout_constraintEnd_toStartOf="@+id/sports"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/vegetables"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#99AA3290"
        android:text="Vegetables"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/packed_food"
        app:layout_constraintEnd_toStartOf="@+id/toys"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sports"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#99782387"
        android:text="Sports Equipments"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toys"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/toys"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#99AA3290"
        android:text="Toys"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/clothes"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/packed_food"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#99CC2D8C"
        android:text="Packed Food"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/beauty"
        app:layout_constraintEnd_toStartOf="@+id/clothes"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/beauty"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#99E32D6B"
        android:text="Beauty and Cosmetics"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grains"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stationary"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#4D9B1DD1"
        android:text="Stationary"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/softdrinks"
        app:layout_constraintEnd_toStartOf="@+id/fruitss"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/clothes"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#99CC2D8C"
        android:text="Clothes"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/grains"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/grains"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#99E32D6B"
        android:text="Whole Grains"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>