<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminMain">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Products"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/menu_person"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Product Name"
        android:inputType="textEmailAddress"
        android:padding="13dp"/>
    <EditText
        android:id="@+id/product_des"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/ic_baseline_category_24"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Product description"
        android:inputType="textEmailAddress"
        android:padding="13dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/product_price"
            android:layout_width="160dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/ic_baseline_local_offer_24"
            android:drawablePadding="10dp"
            android:elevation="3dp"
            android:hint="Product Price"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/product_rating"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/autorenew"
            android:drawablePadding="10dp"
            android:elevation="3dp"
            android:hint="Product Rating"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/product_type"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/mycart"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Product Type"
        android:inputType="textEmailAddress"
        android:padding="10dp"/>
    <ImageView
        android:layout_width="280dp"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/dark"
        android:layout_gravity="center"
        android:id="@+id/product_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on image to add Image"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:layout_gravity="center"
        android:id="@+id/product_add"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_gravity="center"
        android:id="@+id/admin_out"/>

</LinearLayout>